{
  "expo": {
    "name": "MedGuard",
    "slug": "medguard-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/app-icon.png",
    "scheme": "com.firstaidtag.app",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/spalsh_icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.firstaidtag.app",
      "infoPlist": {
        "NFCReaderUsageDescription": "MedGuard uses NFC to read and write medical emergency information on NFC bracelets",
        "NSCameraUsageDescription": "This app uses the camera to scan QR codes for emergency profile access",
        "NSFaceIDUsageDescription": "This app uses Face ID to secure access to your medical information",
        "com.apple.developer.nfc.readersession.iso7816.select-identifiers": [
          "D2760000850101"
        ]
      },
      "entitlements": {
        "aps-environment": "development",
        "com.apple.developer.nfc.readersession.formats": [
          "NDEF",
          "TAG"
        ]
      }
    },
    "android": {
      "package": "com.firstaidtag.app",
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "permissions": [
        "android.permission.NFC",
        "android.permission.CAMERA",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.INTERNET",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.VIBRATE",
        "android.permission.SCHEDULE_EXACT_ALARM",
        "android.permission.RECORD_AUDIO"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "react-native-nfc-manager",
        {
          "nfcPermission": "MedGuard needs NFC access to read and link your medical bracelet",
          "selectIdentifiers": [
            "D2760000850101"
          ],
          "systemCodes": []
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/spalsh_icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow MedGuard to access your camera to scan QR codes"
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow MedGuard to use Face ID for secure authentication"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/spalsh_icon.png",
          "color": "#DC2626",
          "mode": "production"
        }
      ],
      "@react-native-community/datetimepicker"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "077b32ac-235f-47a1-8cc2-ac35d693ce88"
      },
      "googleOAuth": {
        "webClientId": "522012003528-41fip6qmov18st5idr1hg2cb1bptmqk5.apps.googleusercontent.com",
        "iosClientId": "522012003528-424bqdvhplqo1e0ie7o95l34pe4tr2hf.apps.googleusercontent.com",
        "androidClientId": "522012003528-uv62nf03jhg8qs7mbt8v68nram8qjn8i.apps.googleusercontent.com"
      }
    },
    "owner": "exporohaan"
  }
}
